{
    "title": "Accounts",
    "description": "The Accounts API is a collection of methods used to query a customer account. It allows the developer to retrieve account-related data such as the user account balance.",
    "docsUrl": "",
    "url": "https://api.apis.guru/v2/specs/whapi.com/accounts/2.0.0/swagger.json",
    "envVars": {},
    "credentials": {
        "fields": {
            "server": {
                "label": "Server",
                "viewClass": "SelectView",
                "model": [
                    "https://sandbox.whapi.com/v2/accounts",
                    "--- Custom URL"
                ],
                "required": true
            },
            "otherServer": {
                "label": "Custom Server URL",
                "viewClass": "TextFieldView"
            },
            "apiKey": {
                "label": "apiKey (apiKey)",
                "viewClass": "TextFieldView",
                "note": "A unique identifier of your application that is generated by the API portal."
            }
        }
    },
    "triggers": {
        "startFlow": {
            "main": "./lib/triggers/startFlow.js",
            "type": "polling",
            "title": "Start Flow",
            "fields": {}
        }
    },
    "actions": {
        "getDetails": {
            "main": "./lib/actions/getDetails.js",
            "title": "Retrieves details of a customers account",
            "description": "Retrieves a limited set of customer account details. For security purposes, only a subset is supplied, which does not include fields such as security questions and answers.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/getDetails.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "getBalance": {
            "main": "./lib/actions/getBalance.js",
            "title": "Get a customers account balance",
            "description": "This method can be used to retrieve the customer's account balance in UK Sterling.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/getBalance.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "setAccountFlags": {
            "main": "./lib/actions/setAccountFlags.js",
            "title": "Sets a flag based on name to value provided for the user.",
            "description": "Sets a flag based on name to value provided for the user.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/setAccountFlags.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "getPayments": {
            "main": "./lib/actions/getPayments.js",
            "title": "Gets a customer's account payments",
            "description": "Retrieves the customer's account payments in UK Sterling.",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/getPayments.in.json",
                "out": {
                    "type": "object"
                }
            }
        },
        "getRewardEligibility": {
            "main": "./lib/actions/getRewardEligibility.js",
            "title": "Gets a customer's rewards eligibility and opt-in/out status",
            "description": "Gets a customer's rewards eligibility and opt-in/out status",
            "fields": {
                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/getRewardEligibility.in.json",
                "out": {
                    "type": "object"
                }
            }
        }
    }
}